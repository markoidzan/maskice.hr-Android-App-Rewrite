    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/masterlayout">


    <WebView
        android:id="@+id/stranica"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </WebView>

    <ProgressBar
        android:id="@+id/progressbar"
